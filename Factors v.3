#include <iostream>
#include <vector>
using namespace std;
 
void errorcheck(int hi, int lo)
{
  if(hi == lo)
  {
  throw "Error: The first input should not be equal to the second";
  }
}
 
void swap(int& hi, int& lo)
{
  int c;
  c = hi;
  hi = lo;
  lo = c;
}
 
bool iseven(int ibool)
{
  return ((ibool % 2) == 0);
}
 
bool primprod(int ibool)
{
  int cnt = 0;
 
  for(int i = 2; cnt < 2 && i <= ibool; i++)
  {
    while(ibool % i == 0)
    {
      ibool /= i;
      cnt++;
    }
  }
  if(ibool > 1)
  {
    cnt++;
  }
  return cnt == 2;
}
 
void displayNum(int lo, int hi)
{
  vector<int> num;
  cout << "All the numbers between " << lo << " and " << hi << " whose factors are an even number and a prime numbers: \n";
 
  for(int i = lo; i <= hi; i++)
  {
    if(primprod(i) && iseven(i))
    {
      num.push_back(i);
    }
  }
 
  for(int i = 0; i < num.size(); i ++)
  {
    cout << num[i] << '\t';
  }
  exit(0);
}
 
